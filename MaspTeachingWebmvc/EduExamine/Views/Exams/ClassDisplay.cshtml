@model EduExamine.Models.ExamsClassViewModel

@{
    ViewBag.Title = Model.Exam.ExamName + " - Class";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Adminmenu
{
    @Html.Partial("~/Views/Shared/Adminmenu.cshtml")
}
<div class="container-start">
    <div class="row">
        <div class="col-md-12 top_head" style="margin-bottom:10px;">
            <a href="@Url.Action("EIndex", "Exams", null)" class="lnk lnk-default">
                @Model.Exam.ExamName
            </a>
            <span class="glyphicon glyphicon-menu-right small"></span>
            Class
        </div>
        <div class="col-md-12">
            @if (Model.Classess.Count() != 0)
            {
                foreach (var item in Model.Classess)
                {
                    <div class="col-lg-2 newBox" title="@item.ClassName">
                        <div class="row head">
                            @item.ClassName
                        </div>
                        <div class="row control">
                            <div class="col-md-12 btntext" title="Setting Subjects">
                                @Html.ActionLink("Subjects", "SubjectDisplay", new { id = item.ClassesId, examid = Model.Exam.ExamId })
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-lg-12 newBox" title="No records">
                    <div class="row head" style="height:250px;">
                        No records related to class.
                    </div>
                    <div class="row control">

                    </div>
                </div>
            }
        </div>
    </div>
</div>