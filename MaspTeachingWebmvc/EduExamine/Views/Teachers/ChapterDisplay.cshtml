@using PagedList;
@using PagedList.Mvc;
@model EduExamine.Models.TeacherChapterViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Adminmenu
{
    @Html.Partial("~/Views/Shared/Adminmenu.cshtml")
}
<div class="container-start">
    <div class="row">
        <div class="col-md-12 top_head">
            <a href="@Url.Action("TIndex", "Teachers", null)" class="lnk lnk-default">
                @Model.teacher.FullName
            </a>
            <span class="glyphicon glyphicon-menu-right small"></span>
            <a href="@Url.Action("SubjectDisplay", "Teachers", new { id = Model.teacher.TeacherId })" class="lnk lnk-default">
                @Model.subject.SubjectName
            </a>
            <span class="glyphicon glyphicon-menu-right small"></span>
            Chapters
        </div>
        <div class="col-md-12 top-twenty">
            @if (Model.Chapters.Count() != 0)
            {
                foreach (var item in Model.Chapters)
                {
                    <div class="col-lg-2 newBox" title="@item.ChapterName">
                        <div class="row head">
                            @item.ChapterName
                        </div>
                        <div class="row control">
                            <div class="col-md-12 btntext">
                                @Html.ActionLink("Settings", "SettingsDisplay", new { id = item.ChapterId, subjectid = item.SubjectId })
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-lg-12 newBox" title="No records">
                    <div class="row head" style="height:250px;">
                        No Chapters added to @Model.subject.SubjectName.<br />
                        <br />
                        <p style="font-size:11px;">
                            Go to Class >> Subject >> Chapters to Add chapter.
                        </p>
                    </div>
                    <div class="row control">

                    </div>
                </div>
            }
        </div>
    </div>
</div>