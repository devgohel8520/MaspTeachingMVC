@model EduExamine.Models.EduYear

@{
    ViewBag.Title = "Add New";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Adminmenu
{
    @Html.Partial("~/Views/Shared/Adminmenu.cshtml")
}

<div class="container-start">
    <div class="row">
        <div class="col-md-12">
            <h4 style="font-weight:normal; font-family:'Century Gothic';">Edit Year</h4>
        </div>
        <div class="col-md-12 top-twenty">
            @using (Ajax.BeginForm("Edit", new AjaxOptions { }))
            {
                <div class="alert-danger error-list">
                    <div id="errorD" style="padding:10px; margin-bottom:20px; display:none;">

                    </div>
                </div>

                @Html.AntiForgeryToken()
                @Html.HiddenFor(d => d.EduYearId)

                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                    @Html.EditorFor(model => model.EduYearName, new { htmlAttributes = new { @class = "form-control", @placeholder = "ENTER YEAR NAME (EX. MAY-2015 TO MARCH-2016)" } })
                    @Html.ValidationMessageFor(model => model.EduYearName, "", new { @class = "text-danger form-control-feedback" })
                </div>
                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    @Html.EditorFor(model => model.EduStart, new { htmlAttributes = new { @class = "form-control datefield", @type = "date", @placeholder = "START DATE" } })
                    @Html.ValidationMessageFor(model => model.EduStart, "", new { @class = "text-danger form-control-feedback" })
                </div>
                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    @Html.EditorFor(model => model.EduEnd, new { htmlAttributes = new { @class = "form-control datefield", @type = "date", @placeholder = "END DATE" } })
                    @Html.ValidationMessageFor(model => model.EduEnd, "", new { @class = "text-danger form-control-feedback" })
                </div>
                <div class="form-group text-right">
                    <input id="submit" type="button" value="Edit" onclick="submitUniversal(this, '@Url.Action("EdIndex", "EduYears", null)')" class="btn btn-success" />
                    <a href="@Url.Action("EdIndex", "EduYears", null)" class="btn btn-default">
                        Back
                    </a>
                </div>
            }
        </div>
    </div>
</div>
