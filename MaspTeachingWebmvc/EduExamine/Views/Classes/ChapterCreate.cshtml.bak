@model EduExamine.Models.Chapter

@{
    ViewBag.Title = "Add New";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Adminmenu
{
    @Html.Partial("~/Views/Shared/Adminmenu.cshtml")
}
<div class="container-start">
    <div class="row">
        <div class="col-md-12">
            <h4 style="font-weight:normal; font-family:'Century Gothic';">Add Chapter</h4>
        </div>
        <div class="col-md-12 top-twenty">
            @using (Ajax.BeginForm("ChapterCreate", new AjaxOptions { }))
            {
                <div class="alert-danger error-list">
                    <div id="errorD" style="padding:10px; margin-bottom:20px; display:none;">
                    </div>
                </div>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(d => d.SubjectId)
                <div class="form-group input-group input-group-lg">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-tags"></i></span>
                    @Html.EditorFor(model => model.ChapterName, new { htmlAttributes = new { @class = "form-control", @placeholder = "ENTER NO. OF CHAPTER YOU WANT TO CREATE" } })
                    @Html.ValidationMessageFor(model => model.ChapterName, "", new { @class = "text-danger form-control-feedback" })
                </div>
                <div class="form-group text-right">
                    <input id="submit" type="button" value="Save" onclick="submitUniversal(this, '@Url.Action("ChapterDisplay", "Classes", new { id = Model.SubjectId })')" class="btn btn-info" />
                    <a href="@Url.Action("ChapterDisplay", "Classes", new { id = Model.SubjectId })" class="btn btn-default">
                        Back
                    </a>
                </div>
            }
        </div>
    </div>
</div>
