@model MaspTeachingWebmvc.ViewModel.VAdmin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_EmptyView.cshtml";
}
<div class="container-start">
    <div class="row">
        <div class="col-md-12 top-twenty">
            <div class="login-middle">
                <div class="alert-danger error-list">
                    <div id="errorD" style="padding:10px; margin-bottom:20px; display:none;">

                    </div>
                </div>
                @using (Ajax.BeginForm("Login", new AjaxOptions { }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert-danger error-list ul li" })
                    <div>
                        <p>
                            Enter your login information.
                        </p>
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Login Id" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger form-control-feedback" })
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger form-control-feedback" })
                    </div>
                    <div class="form-group input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon glyphicon-th-list"></i></span>
                        @Html.EnumDropDownListFor(model => model.Types, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Types, "", new { @class = "text-danger form-control-feedback" })
                    </div>
                    <div class="row form-group">
                        <div class="col-md-12">
                            <input id="btnlogin" type="button" value="Log In" onclick="submitUniversal(this,'@Url.Action("AdIndex")');" class="btn btn-success form-control" />
                            <a href="@Url.Action("Index","Home",null)" class="btn btn-default form-control" style="margin-top:10px;">
                                Back
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
