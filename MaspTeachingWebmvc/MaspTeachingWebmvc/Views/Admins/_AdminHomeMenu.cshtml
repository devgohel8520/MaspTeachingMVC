@model IEnumerable<MaspTeachingWebmvc.Models.Admin>


@functions{
    public string classResult(int adminId, int menuId)
    {
        return Model.First().Types.Equals(adminId) && Model.First().Types.Equals(menuId) ? "col-md-3 onHoverActive" : "col-md-3 onHover";
    }
}

<div class="@classResult(Model.First().Types,0)">
    <a class="text-center" href="@Url.Action("AdIndexAdmin", new { menuid = 0 })">
        <h5>Admin</h5>
    </a>
</div>
<div class="@classResult(Model.First().Types,1)">
    <a class="text-center" href="@Url.Action("AdIndexAdmin", new { menuid = 1 })">
        <h5>Supervisor</h5>
    </a>
</div>
<div class="@classResult(Model.First().Types,2)">
    <a class="text-center" href="@Url.Action("AdIndexAdmin", new { menuid = 2 })">
        <h5>Principal</h5>
    </a>
</div>
<div class="@classResult(Model.First().Types,3)">
    <a class="text-center" href="@Url.Action("AdIndexAdmin", new { menuid = 3 })">
        <h5>Teacher</h5>
    </a>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $('a.text-center').click(function () {
                alert($(this).closest('div'));
                console.log($(this).closest('div').parent().class());
            });
        });
    </script>
}