@model IEnumerable<MaspTeachingWebmvc.Models.Admin>

@{
    ViewBag.Title = "AdIndexAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section Adminmenu
{
    @Html.Partial("~/Views/Shared/Adminmenu.cshtml")
}

<div class="container-start">

    <div class="row">
        <div class="col-md-12">
            @Html.Partial("~/Views/Admins/_AdminHomeMenu.cshtml", Model)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model.First().Name != "")
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdminProfile.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().AdminProfile.LastName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.First().Types)
                            </th>
                            <th>
                                @Html.ActionLink("+ Add", "AdCreate", new { menuId = Model.First().Types })
                            </th>
                        </tr>
                    </thead>
                    <tbody id="searchResult">
                        @foreach (var item in Model)
                        {
                            <tr style="padding:5px; background-color:#F1F1F1; border-bottom: solid 1px #d1d1d1;">
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdminProfile.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AdminProfile.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td>
                                    @Enum.GetName(typeof(MaspTeachingWebmvc.Models.AdminType),(int)item.Types)
                                </td>
                                <td>
                                    <a href="@Url.Action("AdProfile", "AdProfile", new { menuId=item.Types, Adminid = item.AdminId })">Profile</a>
                                    <text> | </text>
                                    @Html.ActionLink("Edit", "AdEdit", new { menuId = item.Types, Adminid = item.AdminId })
                                    <text> | </text>
                                    @Html.ActionLink("Delete", "AdDelete", new { menuId = item.Types ,Adminid = item.AdminId })

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().AdminProfile.FirstName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().AdminProfile.LastName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.First().Types)
                        </th>
                        <th>
                            @Html.ActionLink("+ Add", "AdCreate", new { menuId = Model.First().Types })
                        </th>
                    </tr>
                </table>
            }
        </div>
    </div>
</div>
